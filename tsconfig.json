{
	"compilerOptions": {
		/* Project Options */
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"module": "ES2020",
		"outDir": "dist/",
		"plugins": [
			{
				"transform": "ts-transformer-replace-paths",
				"replaceImportPaths": {
					"^@saekitominaga/htmlelement-text$": "../node_modules/@saekitominaga/htmlelement-text/dist/HtmlElementText.js",
				}
			}
		],
		"sourceMap": true,
		"target": "ES2020",

		/* Strict Checks */
		"strict": true,
		"alwaysStrict": false,

		/* Module Resolution */
		"moduleResolution": "node",

		/* Linter Checks */
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* Advanced */
		"allowUnreachableCode": false,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF"
	},
	"include": ["src/**/*.ts", "@types/*.ts"]
}
